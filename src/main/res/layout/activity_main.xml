<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_weight="1"
        android:background="@color/gray"
        android:ems="10"
        android:gravity="right|bottom"
        android:inputType="textPersonName"
        android:layout_marginBottom="1pt"
        android:text="0"
        android:textSize="40pt" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_marginBottom="0.5pt"
            android:layout_width="match_parent"
            android:layout_height="40pt" >

            <Button
                android:id="@+id/buAC"
                android:layout_width="30pt"
                android:layout_height="50pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/blue"
                android:text="AC"
                android:onClick="acEvent"
                android:textSize="10pt"></Button>

            <Button
                android:id="@+id/buPlusMinus"
                android:textSize="10pt"
                android:text="+/-"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_height="50pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/blue"
                ></Button>
            <Button
                android:id="@+id/buDivide"
                android:textSize="10pt"
                android:text="/"
                android:onClick="operatorEvent"
                android:layout_marginRight="1pt"
                android:layout_height="50pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/blue"
                ></Button>
            <Button
                android:id="@+id/buMult"
                android:textSize="10pt"
                android:text="*"
                android:onClick="operatorEvent"
                android:layout_marginRight="1pt"
                android:layout_height="50pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/design_default_color_primary_dark"
                ></Button>
        </TableRow>

        <TableRow
            android:layout_marginBottom="0.5pt"
            android:layout_width="match_parent"
            android:layout_height="40pt" >
            <Button
                android:id="@+id/bu7"
                android:textSize="20pt"
                android:text="7"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_height="50pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/blue"
                ></Button>
            <Button
                android:id="@+id/bu8"
                android:textSize="20pt"
                android:text="8"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_height="50pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/blue"
                ></Button>
            <Button
                android:id="@+id/bu9"
                android:textSize="20pt"
                android:text="9"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_height="50pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/blue"
                ></Button>
            <Button
                android:id="@+id/buPercent"
                android:textSize="20pt"
                android:text="%"
                android:onClick="percentEvent"
                android:layout_marginRight="1pt"
                android:layout_height="50pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/design_default_color_primary_dark"
                ></Button>
        </TableRow>

        <TableRow
            android:layout_marginBottom="0.5pt"
            android:layout_width="match_parent"
            android:layout_height="40pt" >
            <Button
                android:id="@+id/bu4"
                android:textSize="20pt"
                android:text="4"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_height="50pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/blue"
                ></Button>
            <Button
                android:id="@+id/bu5"
                android:textSize="20pt"
                android:text="5"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_height="50pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/blue"
                ></Button>
            <Button
                android:id="@+id/bu6"
                android:textSize="20pt"
                android:text="6"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_height="50pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/blue"
                ></Button>
            <Button
                android:id="@+id/buMinus"
                android:textSize="20pt"
                android:text="-"
                android:onClick="operatorEvent"
                android:layout_marginRight="1pt"
                android:layout_height="50pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/design_default_color_primary_dark"
                ></Button>
        </TableRow>

        <TableRow
            android:layout_marginBottom="0.5pt"
            android:layout_width="match_parent"
            android:layout_height="40pt" >
            <Button
                android:id="@+id/bu1"
                android:textSize="20pt"
                android:text="1"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_height="50pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/blue"
                ></Button>
            <Button
                android:id="@+id/bu2"
                android:textSize="20pt"
                android:text="2"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_height="50pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/blue"
                ></Button>
            <Button
                android:id="@+id/bu3"
                android:textSize="20pt"
                android:text="3"
                android:onClick="numberEvent"
                android:layout_marginRight="1pt"
                android:layout_height="50pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/blue"
                ></Button>
            <Button
                android:id="@+id/buAddition"
                android:textSize="20pt"
                android:text="+"
                android:onClick="operatorEvent"
                android:layout_marginRight="1pt"
                android:layout_height="50pt"
                android:layout_weight="1"
                android:layout_width="30pt"
                android:background="@color/design_default_color_primary_dark"
                ></Button>
        </TableRow>
        <TableRow
            android:layout_marginBottom="0.5pt"
            android:layout_width="match_parent"
            android:layout_height="40pt" >
        <Button
            android:id="@+id/bu0"
            android:textSize="20pt"
            android:text="0"
            android:onClick="numberEvent"
            android:layout_marginRight="1pt"
            android:layout_height="50pt"
            android:layout_weight="1"
            android:layout_width="30pt"
            android:background="@color/blue"
            ></Button>
        <Button
            android:id="@+id/buDot"
            android:textSize="20pt"
            android:text="."
            android:onClick="numberEvent"
            android:layout_marginRight="1pt"
            android:layout_height="50pt"
            android:layout_weight="1"
            android:layout_width="30pt"
            android:background="@color/blue"
            ></Button>
        <Button
            android:id="@+id/buEqual"
            android:textSize="20pt"
            android:text="="
            android:onClick="equalEvent"
            android:layout_marginRight="1pt"
            android:layout_height="50pt"
            android:layout_weight="1"
            android:layout_width="30pt"
            android:background="@color/blue"
            ></Button>
        </TableRow>
    </TableLayout>
</LinearLayout>